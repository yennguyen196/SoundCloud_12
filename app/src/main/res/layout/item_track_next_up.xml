<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80">

    <ImageView
        android:id="@+id/image_next_up_track"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_65"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/itunes"
        android:layout_marginLeft="@dimen/dp_8" />

    <TextView
        android:id="@+id/text_next_up_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:maxLines="1"
        android:text="@string/track_name"
        app:layout_constraintEnd_toStartOf="@+id/image_next_up_selected"
        app:layout_constraintStart_toEndOf="@+id/image_next_up_track"
        app:layout_constraintTop_toTopOf="@+id/image_next_up_track" />

    <TextView
        android:id="@+id/text_next_up_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:maxLines="1"
        android:text="@string/title"
        app:layout_constraintBottom_toBottomOf="@+id/image_next_up_track"
        app:layout_constraintEnd_toStartOf="@+id/image_next_up_selected"
        app:layout_constraintStart_toEndOf="@+id/image_next_up_track"
        app:layout_constraintTop_toBottomOf="@+id/text_next_up_title" />

    <TextView
        android:id="@+id/text_next_up_duration"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/title_time"
        android:textSize="@dimen/sp_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_16" />

    <ImageView
        android:id="@+id/image_next_up_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16" />

</android.support.constraint.ConstraintLayout>
